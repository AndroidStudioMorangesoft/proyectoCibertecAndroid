        <LinearLayout
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/backgroundcolor"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
